<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".home"
    android:orientation="vertical">
    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:neumorph_shadowColorLight="@color/light"
        app:neumorph_shadowColorDark="@color/dark"
        app:neumorph_shapeType="basin"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
        android:theme="@style/ShapeAppearance.Neumorph.CardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <soup.neumorphism.NeumorphTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trade Mentor"
                app:neumorph_shadowColorLight="@color/light"
                app:neumorph_shadowColorDark="@color/dark"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp" />
        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>
    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:neumorph_shadowColorDark="@color/dark"
        app:neumorph_shadowColorLight="@color/light"
        android:layout_marginHorizontal="15dp"
        app:neumorph_shapeType="pressed">
        <soup.neumorphism.NeumorphTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profit Value"
            app:neumorph_shadowColorLight="@color/light"
            app:neumorph_shadowColorDark="@color/dark"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>
        <soup.neumorphism.NeumorphTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profit_value"
            android:text="0"
            app:neumorph_shadowColorLight="@color/light"
            app:neumorph_shadowColorDark="@color/dark"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:textSize="40dp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/baseline_arrow_upward_24"
            android:drawablePadding="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <soup.neumorphism.NeumorphButton
                android:layout_width="150dp"
                android:layout_height="85dp"
                android:id="@+id/deposit"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="Deposit"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#00CC66"
                app:neumorph_shadowColorDark="@color/dark"
                app:neumorph_shadowColorLight="@color/light"
                tools:ignore="TextSizeCheck"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearance"/>
            <soup.neumorphism.NeumorphButton
                android:layout_width="150dp"
                android:layout_height="85dp"
                android:id="@+id/withdrawal"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="withdrawal"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#FF4500"
                app:neumorph_shadowColorDark="@color/dark"
                app:neumorph_shadowColorLight="@color/light"
                tools:ignore="TextSizeCheck"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearance"/>
        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WatchActivity"
        android:textStyle="bold"
        android:textColor="@color/text_color2"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:neumorph_shadowColorDark="@color/dark"
        app:neumorph_shadowColorLight="@color/light"
        app:neumorph_shapeAppearance="@style/round"
        android:layout_marginTop="5dp"
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="-15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <soup.neumorphism.NeumorphButton
                android:id="@+id/home"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:neumorph_shapeAppearance="@style/btn"
                android:drawableStart="@drawable/house"
                android:paddingStart="25dp"
                android:gravity="center"
                style="@style/Widget.Neumorph.Button"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/learning_content"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:neumorph_shapeAppearance="@style/btn"
                android:drawableStart="@drawable/education"
                android:paddingStart="25dp"
                android:gravity="center"
                style="@style/Widget.Neumorph.Button"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/buy_sell"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:neumorph_shapeAppearance="@style/btn"
                android:drawableStart="@drawable/buy"
                android:paddingStart="25dp"
                android:gravity="center"
                style="@style/Widget.Neumorph.Button"/>
            <soup.neumorphism.NeumorphButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:neumorph_shapeAppearance="@style/btn"
                android:drawableStart="@drawable/profit"
                android:paddingStart="25dp"
                android:gravity="center"
                style="@style/Widget.Neumorph.Button"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:neumorph_shapeAppearance="@style/btn"
                android:drawableStart="@drawable/user"
                android:paddingStart="25dp"
                android:gravity="center"
                style="@style/Widget.Neumorph.Button"/>
        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>
</LinearLayout>