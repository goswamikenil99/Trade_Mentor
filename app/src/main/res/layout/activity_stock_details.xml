<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".stock_details">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">
    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="-10dp"
        app:neumorph_shadowColorDark="@color/dark"
        app:neumorph_shadowColorLight="@color/text_color2"
        app:neumorph_lightSource="rightBottom"
        app:neumorph_shapeAppearance="@style/stock_details"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_gravity="center">
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background"
    app:cardElevation="50dp"
    android:elevation="50dp"
    app:cardCornerRadius="30dp"
    android:layout_marginHorizontal="5dp"
    app:strokeColor="@color/black">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mahindra"
        android:textColor="@color/white"
        android:layout_gravity="start|center"
        android:drawableStart="@drawable/mahi"
        android:layout_marginStart="20dp"
        android:drawablePadding="10dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="730.78"
        android:layout_gravity="right"
        android:layout_marginEnd="70dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="47.3%"
        android:layout_gravity="right"
        android:layout_marginEnd="70dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"/>
</com.google.android.material.card.MaterialCardView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/text_color2"
            android:elevation="30dp"
            android:text="1D"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/text_color2"
            android:elevation="30dp"
            android:text="1W"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/text_color2"
            android:elevation="30dp"
            android:text="1M"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/text_color2"
            android:elevation="30dp"
            android:text="1Y"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:backgroundTint="@color/text_color2"
            android:elevation="30dp"
            android:text="ALL"
            android:textColor="@color/black"
            android:textSize="13dp"
            tools:ignore="TextSizeCheck" />
    </LinearLayout>
    <soup.neumorphism.NeumorphImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:neumorph_shadowColorLight="@color/light"
        app:neumorph_shadowColorDark="@color/dark"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/trend_7002202_1280__1_"
        android:scaleType="fitCenter"
        android:padding="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:gravity="center">
        <soup.neumorphism.NeumorphButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:neumorph_shadowColorLight="@color/light"
            app:neumorph_shadowColorDark="@color/dark"
            android:text="BUY"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="25dp"/>
        <soup.neumorphism.NeumorphButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:neumorph_shadowColorLight="@color/light"
            app:neumorph_shadowColorDark="@color/dark"
            android:text="SELL"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="25dp"/>
    </LinearLayout>
</LinearLayout>